extends ../../layouts/default

include ../../mixins/organization

block intro
	.page-intro: .container
		h1 Organizations
		p The organizations and people who are part of HS Hackers. Should you be here? Join us!
		.buttons
			if !user
				a(href='/join').btn.btn-primary Join HS Hackers
			a(href='/members').btn.btn-default View Members
			a(href='/members/mentors').btn.btn-default View Mentors

block content
	.container
		.organizations
			if organizations.length
				each org, i in organizations
					if i
						hr
					+organizations(org)
			else
				h3.text-muted There are no organizations yet.
