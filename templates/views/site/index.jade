					h1= nextMeetup.name
					br
					a(href='#schedule')
						i.icon-browser
						.sr-only Date
						span= nextMeetup._.date.format('ddd MMMM DD ')
					a(href='#schedule')
						i.icon-time
						.sr-only Time
						span= nextMeetup.time
					a(href='#location')
						i.icon-point
						.sr-only Location
						span= nextMeetup.place
