//- HEADER
header(id='header', role='banner', class=(section == 'home' ? 'header--home' : 'header--page'))
	nav.navbar(role='navigation'): .container
		//- Site logo + site nav trigger button (on mobile)
		.navbar-header
			a(href='/', title='Back to Home').site-branding
				i.icon-tools
				span HS Hackers Philly <span class='hidden-xs hidden-sm down-arrow'>â†“</span>
			.more.hidden-xs.hidden-sm
				a(href='http://nyc.hshackers.org/', target='_blank').site-nyc.site-branding
					i.icon-tools
					span HS Hackers NYC
				a(href='http://clt.hshackers.org/', target='_blank').site-clt.site-branding
					i.icon-tools
					span HS Hackers Charlotte
				a(href='http://michigan.hshackers.org/', target='_blank').site-mi.site-branding
					i.icon-tools
					span HS Hackers Michigan
				a(href='http://sandiego.hshackers.org/', target='_blank').site-sandiego.site-branding
					i.icon-tools
					span HS Hackers San Diego
				//- a(href='http://dc.hshackers.org/', target='_blank').site-dc.site-branding
					i.icon-tools
					span HS Hackers DC
				//- a(href='http://sf.hshackers.org/', target='_blank').site-sf.site-branding
					i.icon-tools
					span HS Hackers SF
				a(href='http://facebook.com/group/PennAppsHS/', target='_blank').site-fb.site-branding
					i.icon-facebook
					span Facebook Group
				//- include /public/images/logo.svg
			//- User avatar
			if user
				a(href='/me').user.visible-xs
					img(src=(user.photo.exists ? user._.photo.thumbnail(60,60) : user.gravatarUrl || '/images/avatar.png'), width=27).img-circle
			//- Patty
			a#site-nav-toggle(href='javascript:;').site-nav-toggle
				.patty
				
		#site-nav
			nav(role='navigation')
				ul.navbar-nav.navbar-nav--left
					each link in navLinks
						li(class=(section == link.key ? 'nav-item-' + link.key + ' active' : 'nav-item-' + link.key)): a(href=link.href)= link.label
					li: a(href='mailto:meetup@victorlourng.com') Contact
				ul.navbar-nav.navbar-nav--right
					if user
						li: a(href='/me').user.hidden-xs
								img(src=(user.photo.exists ? user._.photo.thumbnail(27,27) : user.avatarUrl || '/images/avatar.png'), width=27).img-circle
								=user.name.first
						li: a(href='/signout')
							span.visible-xs Sign out
							span.entypo.entypo-large.entypo-logout.hidden-xs
					else
						li: a(href='/signin', data-from=page.path, data-initial='signin').js-auth-trigger Sign in
						li: a(href='/join', data-from=page.path).js-auth-trigger Join
